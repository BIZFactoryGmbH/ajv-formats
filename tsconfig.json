{
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "module": "CommonJS"
  },
  "include": [
    "src",
    "types"
  ]
}